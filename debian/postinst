#!/bin/sh -e
# postinst script for nullmailer
#
# see: dh_installdeb(1)


# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see /usr/doc/packaging-manual/
#
# quoting from the policy:
#     Any necessary prompting should almost always be confined to the
#     post-installation script, and should be protected with a conditional
#     so that unnecessary prompting doesn't happen if a package's
#     installation fails and the `postinst' is called with `abort-upgrade',
#     `abort-remove' or `abort-deconfigure'.

. /usr/share/debconf/confmodule

case "$1" in
    configure)

	if [ -d /var/lib/nullmailer ]; then
		echo "Moving /var/lib/nullmailer to /var/spool/nullmailer..."
		cp -a /var/lib/nullmailer/* /var/spool/nullmailer
		rm -rf /var/lib/nullmailer
	fi

        rm -f /var/spool/nullmailer/trigger
        mkfifo /var/spool/nullmailer/trigger
        chmod 622 /var/spool/nullmailer/trigger
        chown mail /var/spool/nullmailer/*
        chmod o-rwx /var/spool/nullmailer/queue
        chmod o-rwx /var/spool/nullmailer/tmp

        chown mail /usr/sbin/nullmailer-queue
        chmod 4755 /usr/sbin/nullmailer-queue
        chown mail /usr/bin/mailq
        chmod 4755 /usr/bin/mailq

	if [ ! -e /etc/nullmailer/defaulthost ]; then
		db_get nullmailer/fqdn
		FQDN="${HOSTNAME}.${RET}"
		DOMAIN="$RET"
		echo "$FQDN" > /etc/nullmailer/defaulthost
	else
		echo "Existing /etc/nullmailer/defaulthost detected"
	fi
	
	if [ ! -e /etc/nullmailer/remotes ]; then
		db_get nullmailer/relayhost
		echo "$RET	smtp" > /etc/nullmailer/remotes
	else
		echo "Existing /etc/nullmailer/remotes detected"
	fi

	if [ ! -e /etc/nullmailer/defaultdomain ]; then
		echo "$DOMAIN" > /etc/nullmailer/defaultdomain
	else
		echo "Existing /etc/nullmailer/defaultdomain detected"
	fi


	db_stop || :
    ;;

    upgrade|abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 0
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
